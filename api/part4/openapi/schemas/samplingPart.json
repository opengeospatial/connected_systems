{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SamplingPart",
  "allOf": [
    { "$ref": "samplingFeature.json" },
    {
      "type": "object",
      "properties": {
        "properties": {
          "type": "object",
          "properties": {
            "featureType": {
              "type": "string",
              "enum": [
                "http://www.opengis.net/def/samplingFeatureType/OGC-SML/2.0/FeaturePart"
              ]
            },
            "partID": {
              "description": "ID of the feature part of interest",
              "type": "string"
            }
          }
        }
      }
    }
  ]
}