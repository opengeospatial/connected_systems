{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SamplingPoint",
  "allOf": [
    { "$ref": "samplingSpatial.json" },
    {
      "type": "object",
      "properties": {
        "geometry": {
          "oneOf": [
            { "$ref": "https://geojson.org/schema/Point.json" },
            { "type": "null" }
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "featureType": {
              "type": "string",
              "const": "http://www.opengis.net/def/samplingFeatureType/OGC-OM/2.0/SF_SamplingPoint"
            }
          }
        }
      }
    }
  ]
}